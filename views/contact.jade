extends layout

block content
  .container.top-section
    form(action='/contact', method='post')
      //(type='hidden', name='_csrf', value=token)
      .control-group
        label.control-label(for='message_name') Your Name
        .controls
          input#message_name.input-xxlarge(type='text', placeholder='Name', name='message[name]', value='')
      .control-group
        label.control-label(for='message_email') Email
        .controls
          input#message_email.input-xxlarge(type='text', placeholder='Email', name='message[email]', value='')
      .control-group
        label.control-label(for='message_message') Message
        .controls
          textarea#message_message.input-xxlarge(placeholder='Enter message', rows='6', cols='50' name='message[message]')
      button.btn(type='submit') Send Message